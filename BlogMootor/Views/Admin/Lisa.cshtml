@model BlogMootor.Models.Postitused

@{
    ViewBag.Title = "Lisa";
}

<form action="@Href("~/Admin/Update")" method="post" id="postForm">
    @if (Model.ID != -1)
    { 
        <input type="hidden" name="id" value="@Model.ID" />
    }
    @{ DateTime kuupaev = DateTime.Now;}
    <input type="text" name="pealkiri" value="@Model.Pealkiri" />Pealkiri<br />
    <input type="text" name="kuupaev" value="@kuupaev" />Kuupäev<br />
    <textarea name="sisu" rows="10" cols="80">@Model.Sisu</textarea><br />
    <input type="submit" name="submit" value="Sisesta!" />
</form>
<br />
<a href="@Href("~/Admin/Controlpanel")">Tagasi Juhtpaneeli</a>